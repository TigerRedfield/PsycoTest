@model PsycoTest.DBModel.Test

@{
    Layout = null;
    ViewBag.Title = Model.TestName;
}

<title>@ViewBag.Title </title>

<div style="font-family: 'Times New Roman';">
    <h4 style="display: flex; justify-content: center; font-size: 20pt">
        @Model.TestName
    </h4>
    <hr style="margin-bottom: 50px" />
    <label style="display: flex; justify-content: center; white-space: pre-wrap; font-size: 20pt; text-align:center">@Model.TestDescription</label>
    <hr style="margin-bottom: 30px; margin-top: 50px" />

    <div style="font-size: 20pt; display: flex; justify-content: center;">
        <label style="text-align: center; color: red">Просим прощения. <br />Возможность прохождения тестов на данный момент времени находится в разработке. </label>
    </div>
    <div style="font-size: 20pt; display: flex; justify-content: flex-end; margin-top: 230px">
        @Html.ActionLink("Назад", "ListTest", null, null, new { @class = "nav-link buttonUG", @style = "width: 130px; padding: 5px; color: black; text-decoration:none; border: 2px black solid; text-align: center" })
    </div>
</div>

<style>

    .buttonUG {
        background-color: #e9e9ed;
        border-radius: 4px;
    }

        .buttonUG:hover {
            background-color: #d0d0d7;
        }
</style>

