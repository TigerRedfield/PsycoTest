@if (Session["UserLogin"] == null)
{
    <ul class="navbar-nav" style="font-size: 20px; justify-content: center">
        <li class="nav-item"> @Html.ActionLink("Регистрация", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>
        <li class="nav-item"> @Html.ActionLink("Вход", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
    </ul>
}
else
{
    <ul class="navbar-nav" style="font-size: 20px;">
        <li class="nav-item"> @Html.Label(Session["UserLastName"] + " " + Session["UserFirstName"] + " " + Session["UserPatronymic"])</li>
        <li class="nav-item"> @Html.ActionLink("Выход", "Logout", "Account", new { area = "" }, new { @style = "margin-top: 22px", @class = "nav-link" })</li>
    </ul>
}


