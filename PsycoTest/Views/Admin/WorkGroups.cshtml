@model IEnumerable<PsycoTest.DBModel.Group>

@{
    ViewBag.Title = "Группы";
}

<div>
    <div style="display: flex; justify-content: space-between">
        @Html.ActionLink("Назад к списку пользователей", "Users", null, new { @class = "nav-link", @style = "font-family: Times New Roman; font-size: 16pt; color: #42aaff" })
        @Html.ActionLink("Добавить группу", "CreateGroup", null, new { @class = "nav-link", @style = "font-family: Times New Roman; font-size: 16pt; color: #42aaff; text-align: right" })
    </div>
</div>
<fieldset style="font-family: 'Times New Roman';">
    <legend style="font-size: 28pt;">
        Группы
    </legend>
</fieldset>
<hr style="margin-bottom: 50px" />
<div style="margin-top: 25px">
    <table style="text-align: center; display: flex; justify-content: center">
        @foreach (var g in Model)
        {
            <tr style="font-size: 20pt">
                <td>@g.GroupNumber</td>
                <td style="padding: 10px 20px">
                    @Html.ActionLink("Изменить", "EditGroup", new { id = g.GroupId }, new { @class = "nav-link buttonUG", @style = "width: 130px; border: 1px black solid;" })
                </td>
                <td>
                    @Html.ActionLink("Удалить", "DeleteGroup", new { id = g.GroupId }, new { @class = "nav-link buttonUG", @style = "width: 130px; border: 1px black solid;" })
                </td>
            </tr>
        }
    </table>
</div>

<style>

    .buttonUG {
        background-color: #e9e9ed;
        border-radius: 4px;
        
    }

        .buttonUG:hover {
            background-color: #d0d0d7;
        }
</style>

